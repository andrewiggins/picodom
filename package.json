{
  "name": "picodom",
  "description": "1 KB JavaScript Virtual DOM builder and patch function.",
  "version": "0.0.8",
  "main": "dist/picodom.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "license": "MIT",
  "repository": "picodom/picodom",
  "files": [
    "src",
    "dist"
  ],
  "author": "Jorge Bucaran",
  "keywords": [
    "picodom",
    "hyperapp",
    "react",
    "jsx",
    "virtual dom",
    "vdom",
    "hyperx",
    "hyperscript"
  ],
  "scripts": {
    "test": "jest --coverage --no-cache && tsc -p test/typings/tsconfig.json",
    "build": "rollup -cm -n picodom -f umd -i src/index.js -o dist/picodom.js",
    "format": "prettier --semi false --write 'src/**/*.js' 'picodom.d.ts'",
    "prepublish": "npm run build",
    "release": "npm run build && npm test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "babel": {
    "presets": "es2015"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "jest": "^20.0.4",
    "prettier": "~1.5.3",
    "rollup": "^0.45.2",
    "rollup-plugin-uglify": "^2.0.1",
    "typescript": "^2.4.2"
  },
  "typings": "picodom.d.ts"
}
